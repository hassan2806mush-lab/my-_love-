        function moveNo() {
            const btn = document.getElementById('no-btn');
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
            // Ø¥Ø°Ø§ Ø­Ø§ÙˆÙ„Øª Ù‡ÙˆØ§ÙŠ Ø§Ù„Ø²Ø± ÙŠØ¨Ø¯ÙŠ ÙŠØ®ØªÙÙŠ
            let currentOpacity = parseFloat(window.getComputedStyle(btn).opacity);
            if (currentOpacity > 0) btn.style.opacity = currentOpacity - 0.2;
        }

        function showLove() {
            document.getElementById('quiz-section').style.display = 'none';
            document.getElementById('final-msg').style.display = 'block';
            
